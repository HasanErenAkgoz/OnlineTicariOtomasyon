@model OnlineTicariOtomasyon.Models.Entity.Cari
@using (Html.BeginForm("Update", "CariPanel", FormMethod.Post))
{ 
<form class="form-horizontal">

  
            @Html.HiddenFor(cari => cari.Id, new { @class = "form-control" })


    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">Adınız</label>

        <div class="col-sm-10">
            @Html.TextBoxFor(cari => cari.Name, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputEmail" class="col-sm-2 col-form-label">Soyadı</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(cari => cari.Surname, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName2" class="col-sm-2 col-form-label">Şehri</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(cari => cari.City, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputExperience" class="col-sm-2 col-form-label">Eposta Adresi</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(cari => cari.Email, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputSkills" class="col-sm-2 col-form-label">Şifresi</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(cari => cari.Password, new { @class = "form-control" })

        </div>

    </div>


    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <button type="submit" class="btn btn-danger">Güncelle</button>

        </div>

    </div>

</form>
}
