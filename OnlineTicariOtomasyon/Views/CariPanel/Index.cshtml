@using OnlineTicariOtomasyon.Models.Entity
@model List<Messages>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<center><h2>Ürün Takip Otomasyonu Cari Bİlgileri</h2></center>


<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title> Profile</title>

    <!-- Tell the browser to be responsive to screen width -->

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">

    <!-- Ionicons -->

    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    <!-- Theme style -->

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">

    <!-- Google Font: Source Sans Pro -->

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>

<body class="hold-transition sidebar-mini">

    <div class="wrapper">

        <section class="content-header">

            <div class="container-fluid">

                <div class="row mb-2">

                    <div class="col-sm-6">

                        <h1>Profilim</h1>

                    </div>
                </div>
            </div>

        </section>
        <section class="content">

            <div class="container-fluid">

                <div class="row">

                    <div class="col-md-3">

                        <div class="card card-primary card-outline">

                            <div class="card-body box-profile">

                                <div class="text-center">

                                    <img class="profile-user-img img-fluid img-circle"
                                         src="https://i.resmim.net/wU86sl.jpg"
                                         alt="User profile picture">

                                </div>


                                <h3 class="profile-username text-center">@ViewBag.nameSurname</h3>

                                <p class="text-muted text-center">@ViewBag.email</p>

                                <ul class="list-group list-group-unbordered mb-3">

                                    <li class="list-group-item">

                                        <b>Toplam Satış</b> <a class="float-right">@ViewBag.totalSales</a>

                                    </li>


                                    <li class="list-group-item">
                                        @if (ViewBag.totalPrice == "" || ViewBag.totalPrice == null)
                                        {
                                            <b>Toplam Harcanılan Para</b> <a class="float-right">0 ₺ </a>

                                        }
                                        else
                                        {
                                        <b>Toplam Harcanılan Para</b> <a class="float-right">@ViewBag.totalPrice ₺</a>
                                        }
                                    </li>
                                    <li class="list-group-item">
                                        @if (ViewBag.totalPrice == "" || ViewBag.totalPrice == null)
                                        {
                                            <b>Alınan Ürünlerin Adedi</b> <a class="float-right">0 </a>
                                        }
                                        else
                                        {
                                            <b>Alınan Ürünlerin Adedi</b> <a class="float-right">@ViewBag.totalProduct </a>

                                        }
                                    </li>

                                </ul>

                                <a href="~/CariPanel/TrackingCargo" class="btn btn-primary btn-block"><b>Kargo Takip</b></a>

                            </div>

                            <!-- /.card-body -->

                        </div>

                        <!-- /.card -->
                        <!-- About Me Box -->

                        <div class="card card-primary">

                            <div class="card-header">

                                <h3 class="card-title">Hakkımda</h3>

                            </div>

                            <!-- /.card-header -->



                            <div class="card-body">

                                <strong><i class="fas fa-book mr-1"></i>Şehir</strong>

                                <p class="text-muted">

                                    @ViewBag.City
                                </p>

                                <hr>

                                <strong><i class="fas fa-map-marker-alt mr-1"></i> Email</strong>

                                <p class="text-muted" @ViewBag.email    </p>

                                <hr>


                            </div>

                            <!-- /.card-body -->

                        </div>

                        <!-- /.card -->

                    </div>

                    <!-- /.col -->

                    <div class="col-md-9">

                        <div class="card">

                            <div class="card-header p-2">

                                <ul class="nav nav-pills">

                                    <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Mesjlar</a></li>

                                    <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Bildirimler</a></li>

                                    <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">Ayarlar</a></li>

                                </ul>

                            </div><!-- /.card-header -->

                            <div class="card-body">

                                <div class="tab-content">

                                    <div class="active tab-pane" id="activity">

                                        <!-- Post -->
                                        @foreach (var messages in Model)
                                        {


                                            <div class="post">

                                                <div class="user-block">

                                                    <img class="img-circle img-bordered-sm" src="https://i.resmim.net/i/7b7bc658d3fce83780679e84dc62f2fa.png" alt="user image">

                                                    <span class="username">

                                                        <a href="#">@messages.Gonderici</a>

                                                        <a hre="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>

                                                    </span>

                                                    <span class="description">@messages.Konu - @messages.Tarih.ToShortDateString()</span>

                                                </div>

                                                <!-- /.user-block -->

                                                <p>
                                                    @messages.icerik

                                                </p>


                                            </div>
                                        } 
                    </div>

                    <!-- /.tab -->

                                    <div class="tab-pane" id="timeline">

                                        @Html.Action("Announs", "CariPanel")



                                    </div>

                    <!-- /.tab-pane -->
                    <div class="tab-pane" id="settings">

                        @Html.Action("Settings", "CariPanel")
                    </div>


                    <!-- /.tab-pane -->

                </div>

                <!-- /.tab-content -->

            </div><!-- /.card-body -->

    </div>

    <!-- /.nav-tabs-custom -->
    </div>

    <!-- /.col -->
    </div>

    <!-- /.row -->
    </div><!-- /.container-fluid -->
    </section>

    <!-- /.content -->
    </div>

    <!-- /.content-wrapper -->

   
    <!-- /.control-sidebar -->
    <!-- ./wrapper -->
    <!-- jQuery -->

    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap 4 -->

    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- AdminLTE App -->

    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>

    <!-- AdminLTE for demo purposes -->

    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>

</body>

</html>