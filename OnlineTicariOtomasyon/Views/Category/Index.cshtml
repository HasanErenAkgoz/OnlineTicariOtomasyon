@using OnlineTicariOtomasyon.Models.Entity
@using PagedList
@using PagedList.Mvc
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>

    <style>
        a {
            margin-top: 5px;
        }
    </style>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css" rel="stylesheet" />


</head>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.6.0.js"></script>
<br />

<table id="tbl1" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Kategori Adı</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    @Html.ActionLink("Sil", "Delete", new { id = category.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Bu Veriyi Gerçekten Silmek İstiyor Musunuz?')" })
                    <a href="~/Category/GetByCategoryId/@category.Id" class="btn btn-warning">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<button type="button" class="btn btn-success" data-toggle="modal" data-target="#Add" >
    Kategori Ekle
</button>

<div class="modal fade" id="Add" tabindex="-1" role="dialog" aria-labelledby="">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            </div>
            <form method="post" action="~/Category/Add">
                <div class="modal-body">
                    <div class="form-group">
                        <label>
                            Kategori Adını Giriniz
                        </label>
                        <input type="text" name="Name" maxlength="50" required class="form-control" placeholder="Lütfen Kategori Adını Giriniz" />
                    </div>
                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>

                    <button type="submit" id="btn1"  onclick = "return confirm('Bu Kategoriyi Eklemek İstediğinizden Emin Misiniz?')" class="btn btn-primary">Kategori Ekle</button>

                </div>
            </form>


        </div>
    </div>

</div>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({
        "language": {
            "url": "https://cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
        }
    });
</script>
<script>
    $('#delete').click(function () {
        swal("Good job!", "You clicked the button!", "success");
})
</script>