
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Genesis Ürün Takip Otomasyonu</title>
    <!-- custom-theme -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Project Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //custom-theme -->
    <!-- Google fonts -->
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=latin-ext" rel="stylesheet">
    <!-- Google fonts -->
    <!-- css files -->
    <link href="~/weblogin/css/style.css" type="text/css" rel="stylesheet" media="all">
    <!-- //css files -->

    <link rel="stylesheet" href="~/weblogin/css/font-awesome.css"> <!-- Font-Awesome-Icons-CSS -->

    <link href="~/weblogin/css/popup-box.css" rel="stylesheet" type="text/css" media="all" /> <!-- popup box css -->

</head>
<!-- body starts -->
<body>

    <!-- section -->
    <section class="register">
        <div class="header">
            <div class="logo">
                <a href="#">Genesis Ürün Takip</a>
            </div>
            <div class="social">
                <li><a href="https://www.instagram.com"><span class="fa fa-instagram"></span></a></li>
                <li><a href="https://www.linkedin.com/in/hasanerenakgoz/"><span class="fa fa-linkedin"></span></a></li>
                <li><a href="https://github.com/HasanErenAkgoz"><span class="fa fa-github"></span></a></li>
            </div>
            <div class="clear"></div>
        </div>

        <div class="register-full">
            <div class="register-left">
                <div class="register">
                    <h1>Genesis Ürün Takip</h1>
                    <h2>Bir Başka Dünya</h2>
                    <p>
                        Genesis Ürün takip şirketinizi büyütmenin ve şirket verilerinizin dijital ortamda kontrol altında tutmanın en güvenilir ve en kaliteli adresi
                    </p>
                    <div class="content3">
                        <ul>
                            <li><a class="" href="#">Firmalar</a></li>
                            <li><a class="read" href="#">Ürünlerimiz</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="register-right">
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog2">Cari Kaydı »</a>
                </div>
                <div class="register-in middle">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog">Cari Girişi »</a>
                </div>
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog1">Yetkili Girişi »</a>
                </div>
                <div class="clear"> </div>
            </div>
            <div class="clear"> </div>
        </div>
        <!-- copyright -->
        <p class="agile-copyright">© 2021 Hasan Eren Akgöz </p>
        <!-- //copyright -->
    </section>
    <!-- //section -->
    <!-- login form popup-->
    <div class="pop-up">
        <div id="small-dialog" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Cari Girişi</h3>
                    <span class="fa fa-lock"></span>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        @using (Html.BeginForm("CariLogin", "Login", FormMethod.Post))
                        {
                            <input type="text" class="name" name="Email" Placeholder="Email Adresiniz" required="" />
                            <input type="password" class="password" name="Password" Placeholder="Şifreniz" required="" />
                            <input type="submit" value="Giriş">
                        }
                    </div>
                    <div class="login-agileits-bottom">
                        <h6><a href="#">Şifreni mi unuttun?</a></h6>
                    </div>
                </div>
            </div>

        </div>    </div>
    <!-- //login form popup-->
    <!-- subscribe form popup-->
    <div class="pop-up">
        <div id="small-dialog1" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Admin Giriş Formu</h3>
                    <p>Bazıları başarıyı sadece hayal ederken, bazıları ise her sabah erkenden kalkar ve hayallerini gerçekleştirir.</p>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        @using (Html.BeginForm("AdminLogin", "Login", FormMethod.Post))
                        {<input type="text" class="name" name="Email" Placeholder="Email Adresiniz" required="" />
                            <input type="password" class="password" name="Password" Placeholder="Şifrneiz" required="" />
                            <input type="submit" value="Giriş">
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- //subscribe form popup-->
    <!-- register form popup-->
    <div class="pop-up">
        <div id="small-dialog2" class="mfp-hide book-form">
            @Html.Action("Add", "Login");

        </div>
    </div>

    <script type="text/javascript" src="~/weblogin/js/jquery-2.1.4.min.js"></script>
  
    <script src="~/weblogin/js/jquery.magnific-popup.js" type="text/javascript"></script>
    <script>
	$(document).ready(function() {
	$('.popup-with-zoom-anim').magnificPopup({
		type: 'inline',
		fixedContentPos: false,
		fixedBgPos: true,
		overflowY: 'auto',
		closeBtnInside: true,
		preloader: false,
		midClick: true,
		removalDelay: 300,
		mainClass: 'my-mfp-zoom-in'
	});

	});
    </script>
    <!--//popup-js-->

</body>
<!-- //body ends -->
</html>