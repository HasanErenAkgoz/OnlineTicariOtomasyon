@using OnlineTicariOtomasyon.Models.Entity
@model List<Cargo>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    table {
        margin-top: 10px;
    }
</style>
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<br />
@using (Html.BeginForm("Index","Cargo",FormMethod.Get))
            {
                <p>
                    Kargo Takip Numarasını Giriniz: @Html.TextBox("p")
                    <input type="submit" value="Ara" />
                </p>
            }
<table id="tbl1" class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Personel</th>
            <th>Alıcı</th>
            <th>Kargo Takip Kodu</th>
            <th>Tarih</th>
            <th>Detay</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var cargo in Model)
        {
            <tr>
                <td>@cargo.PersonelName</td>
                <td>@cargo.AlıcıName</td>
                <td>@cargo.TrackingCode</td>
                <td>@cargo.Time</td>
                <td> <a href="~/Cargo/CargoTracking/@cargo.TrackingCode" class="btn btn-warning">Detaylar</a></td>
            </tr>
            }
    </tbody>
</table>
<br />
<button type="button" class="btn btn-success" data-toggle="modal" data-target="#Add">
    Kargo Ekle
</button><link href="~/Content/bootstrap.css" rel="stylesheet" />
<div class="modal fade" id="Add" tabindex="-1" role="dialog" aria-labelledby="">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            </div>
            <form method="post" action="~/Cargo/Add">
                <div class="modal-body">
                    <div class="form-group">
                        <label>
                            Kargo Takip Numarası
                        </label>
                        <input type="text" name="TrackingCode" value="@ViewBag.trackingCode" readonly class="form-control" />
                        <br />
                        <label>
                            Personel Adını Giriniz
                        </label>
                        <input type="text" name="PersonelName" class="form-control" placeholder="Lütfen Personel Adını Giriniz" />
                        <br />
                        <label>
                            Alıcı Adını Giriniz
                        </label>
                        <input type="text" name="AlıcıName" class="form-control" placeholder="Lütfen Alıcı Adını Giriniz" />
                        <br />
                        <label>
                            Açıklama
                        </label>
                        <input type="text" name="Content" style="height:4rem" class="form-control" />
                        <br />
                        <label>
                            Tarih
                        </label>
                        <input type="date" name="Time" class="form-control" />

                    </div>
                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>

                    <button type="submit" class="btn btn-primary">Departman Ekle</button>

                </div>
            </form>
        </div>
    </div>
</div>


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({
        "language": {
            "url": "https://cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
        }});
</script>
