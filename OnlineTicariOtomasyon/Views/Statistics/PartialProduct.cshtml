@model IEnumerable<OnlineTicariOtomasyon.Models.Entity.Product>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Marka Bilgileri</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @{ int value = 0;}
                @foreach (var item in Model)
                {

                <tr>
                    <td>@{value++;} @value</td>
                    <td>@item.Name</td>
                    <td>
                        @if (item.Stock >= 1 && item.Stock <= 10)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-danger" style="width: @item.Stock%"></div>
                            </div>
                        }
                        else if (item.Stock >= 10 && item.Stock <= 30)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-warning" style="width: @item.Stock%"></div>
                            </div>
                        }
                        else if (item.Stock >= 30 && item.Stock <= 200)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-success" style="width: @item.Stock%"></div>
                            </div>
                        }
                    </td>
                    @if (item.Stock >= 1 && item.Stock <= 10)
                    {
                        <td><span class="badge bg-danger">@item.Stock</span></td>

                    }
                    else if (item.Stock >= 4 && item.Stock <= 6)
                    {
                        <td><span class="badge bg-warning">@item.Stock</span></td>

                    }
                    else if (item.Stock >= 10 && item.Stock <= 30)
                    {
                        <td><span class="badge bg-success">@item.Stock</span></td>

                    }
                </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>

