@using OnlineTicariOtomasyon.Models.Entity
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    a {
        margin-top: 5px;
    }
</style>

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<br />
<table id="tbl1" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Departman Adı</th>
            <th>İşlemler</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var departman in Model)
        {
            <tr>
                <td>@departman.Name</td>
                <td>
                    <a href="~/Department/Delete/@departman.Id"  onclick = "return confirm('Bu departmanı silmek istediğinizden emin misiniz?')" class="btn btn-danger">Sil</a>
                    <a href="~/Department/GetByDepartmentId/@departman.Id" class="btn btn-warning">Güncelle</a>
                </td>
                <td>  <a href="~/Department/DepartmentDetails/@departman.Id" class="btn btn-primary">Departman Detayları</a></td>

            </tr>
        }
    </tbody>
</table>
<button type="button" class="btn btn-success" data-toggle="modal" data-target="#Add">
    Departman Ekle
</button>
<div class="modal fade" id="Add" tabindex="-1" role="dialog" aria-labelledby="">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            </div>
            <form method="post" action="~/Department/Add">
                <div class="modal-body">
                    <div class="form-group">
                        <label>
                            Departman Adını Giriniz
                        </label>
                        <input type="text" name="Name" class="form-control" placeholder="Lütfen Departman Adını Giriniz" />
                        <input type="text" name="Status" value="True" hidden="hidden" class="form-control" placeholder="Lütfen Departman Adını Giriniz" />

                    </div>
                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>

                    <button type="submit" class="btn btn-primary">Departman Ekle</button>

                </div>
            </form>
        </div>
    </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({
        "language": {
            "url": "https://cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
        }
    });
</script>

